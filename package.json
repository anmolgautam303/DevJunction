{
  "name": "nodereactapp",
  "version": "1.0.0",
  "description": "Social network for developers",
  "main": "dist/app.js",
  "scripts": {
    "start": "tsc && node dist/app.js",
    "server": "ts-node-dev src/app.ts",
    "client": "cd client && yarn start",
    "dev": "concurrently \"yarn server\" \"yarn client\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false && cd client && yarn install && yarn build"
  },
  "author": "Anmol Gautam",
  "license": "MIT",
  "dependencies": {
    "axios": "^0.19.2",
    "bcryptjs": "^2.4.3",
    "config": "^3.3.1",
    "express": "^4.17.1",
    "express-validator": "^6.5.0",
    "gravatar": "^1.8.0",
    "gravator": "^1.0.2",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.9.16",
    "request": "^2.88.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.6",
    "concurrently": "^5.2.0",
    "ts-node-dev": "^1.0.0-pre.44",
    "tslint": "^6.1.2",
    "typescript": "^3.9.5"
  }
}
